<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="xdx.fim.uhk.cz.todo_list">

    <application
        android:allowBackup="true"
        android:icon="@drawable/notes_android_128"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:versionCode="2"
        >
        <activity android:name="xdx.fim.uhk.cz.todo_list.MainActivity"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="xdx.fim.uhk.cz.todo_list.DetailActivity"
            android:parentActivityName="xdx.fim.uhk.cz.todo_list.MainActivity"
            android:screenOrientation="portrait"
            />
        <activity
            android:name="xdx.fim.uhk.cz.todo_list.AddActivity"
            android:parentActivityName="xdx.fim.uhk.cz.todo_list.MainActivity"
            android:screenOrientation="portrait"
             />
        <activity
            android:name="xdx.fim.uhk.cz.todo_list.EditActivity"
            android:parentActivityName="xdx.fim.uhk.cz.todo_list.MainActivity"
            android:screenOrientation="portrait"
            />
    </application>

</manifest>
