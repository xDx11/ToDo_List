<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layer_list"
    android:id="@+id/rel_layout_item">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:paddingEnd="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingStart="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/textView"
                android:textColor="@color/colorBlack"
                android:background="@android:color/transparent"
                android:layout_marginLeft="10dp"
                android:textSize="20sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Přidáno:"
                    android:textSize="8sp"
                    android:textColor="@color/colorBlack"
                    android:id="@+id/textView3"
                    android:layout_weight="0.12"
                    android:layout_width="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:id="@+id/textViewDateItem"
                    android:layout_below="@+id/textView"
                    android:layout_alignLeft="@+id/textView"
                    android:layout_alignStart="@+id/textView"
                    android:textSize="10sp"
                    android:textColor="@color/colorAccent"
                    android:layout_weight="0.30" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Termín:"
                    android:textSize="8sp"
                    android:textColor="@color/colorBlack"
                    android:id="@+id/textView4"
                    android:layout_weight="0.07" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:id="@+id/textViewStartDateItem"
                    android:textSize="10sp"
                    android:textColor="@color/colorAccent"

                    android:layout_alignParentBottom="true"
                    android:layout_toEndOf="@+id/textViewDateItem"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/imageView"
            android:background="@drawable/red_triangle"
            android:layout_marginEnd="5dp"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:src="@drawable/red_status"
            android:id="@+id/imageViewStatus"
            android:layout_height="match_parent"

            android:layout_width="wrap_content" />

    </LinearLayout>


</RelativeLayout>